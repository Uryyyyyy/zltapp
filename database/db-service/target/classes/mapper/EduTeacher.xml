<!--映射文件与接口的对应关系-->
<mapper namespace="com.zlt.mapper.EduTeacherMapper">

    <select id="findAllTeacher" resultType="com.zlt.pojo.EduTeacher">
        select * from edu_teacher
    </select>

    <select id="findByTeacherId" resultType="com.zlt.pojo.EduTeacher" parameterType="java.lang.Integer">
        select * from edu_teacher where teacherId=#{teacherId}
    </select>

    <select id="findByTeacherMobile" resultType="com.zlt.pojo.EduTeacher" parameterType="java.lang.String">
        select * from edu_teacher where teacherMobile=#{teacherMobile}
    </select>

