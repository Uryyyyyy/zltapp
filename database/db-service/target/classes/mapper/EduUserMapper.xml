<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<!--映射文件与接口的对应关系-->
<mapper namespace="com.zlt.mapper.EduUserMapper">

    <select id="findByName" resultType="com.zlt.pojo.EduUser">
        select * from edu_user where userNickname = #{userNickname}
    </select>

    <select id="findAll" resultType="com.zlt.pojo.EduUser">
        select * from edu_user
    </select>

<!--    <select id="getInfo" resultType="com.zlt.pojo.User">-->
<!--        select userPortrait,userNickname,userMobile,userEmail,userSchool,userSno,createTime,updateTime from user where userNickname = #{userNickname}-->
<!--    </select>-->

    <select id="findByEmail" resultType="com.zlt.pojo.EduUser" parameterType="java.lang.String">
        select *
        from edu_user
        where EduUser.userEmail = #{userEmail}
    </select>

    <select id="findByMobile" resultType="com.zlt.pojo.EduUser" parameterType="java.lang.String">
        select *
        from edu_user
        where EduUser.userMobile = #{userMobile}
    </select>

    <insert id="addUser" parameterType="com.zlt.pojo.EduUser">
        insert into edu_user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">
                userId,
            </if>
            <if test="userPortrait != null">
                userPortrait,
            </if>
            <if test="userNickname != null">
                userNickname,
            </if>
            <if test="userMobile != null">
                userMobile,
            </if>
            <if test="userEmail != null">
                userEmail,
            </if>
            <if test="userPassword != null">
                userPassword,
            </if>
            <if test="userSchool != null">
                userSchool,
            </if>
            <if test="userSno != null">
                userSno,
            </if>
            <if test="reverse1 != null">
                reverse1,
            </if>
            <if test="reverse2 != null">
                reverse2,
            </if>
        </trim>
        <trim prefix="value (" suffix=")" suffixOverrides=",">
            <if test="userId != null">
                #{userId},
            </if>
            <if test="userPortrait != null">
                #{userPortrait},
            </if>
            <if test="userNickname != null">
                #{userNickname},
            </if>
            <if test="userMobile != null">
                #{userMobile},
            </if>
            <if test="userEmail != null">
                #{userEmail},
            </if>
            <if test="userPassword != null">
                #{userPassword},
            </if>
            <if test="userSchool != null">
                #{userSchool},
            </if>
            <if test="userSno != null">
                #{userSno},
            </if>
            <if test="reverse1 != null">
                #{reverse1},
            </if>
            <if test="reverse2 != null">
                #{reverse2},
            </if>
        </trim>
    </insert>
